{
    "env": {
        "browser": true,
        "node": true,        
        "es6": true
    },
    "parser": "babel-eslint",        
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "none"
            }
        ]
    }

}
